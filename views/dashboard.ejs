<%- include('partials/header', { title: 'Dashboard' }) %>

<div class="container">
  <h1 class="nes-text is-primary">Welcome, <%= user.displayName %>!</h1>
  <form action="/logout" method="post">
    <button type="submit" class="nes-btn is-warning">Logout</button>
  </form>

  <h2 class="nes-text is-primary">Google Analytics Data</h2>
  <form action="/getdata" method="post">
    <div class="form-group">
      <label for="startDate">Start Date:</label>
      <input type="date" id="startDate" name="startDate" class="nes-input" required>
    </div>

    <div class="form-group">
      <label for="endDate">End Date:</label>
      <input type="date" id="endDate" name="endDate" class="nes-input" required>
    </div>

    <div class="form-group">
      <label for="metric">Metric:</label>
      <select id="metric" name="metric" class="nes-select" required>
        <option value="ga:sessions">Sessions</option>
        <option value="ga:pageviews">Pageviews</option>
        <option value="ga:users">Users</option>
      </select>
    </div>

    <button type="submit" class="nes-btn is-primary">Get Data</button>
  </form>

  <% if (data) { %>
    <h3 class="nes-text is-primary">Data:</h3>
    <pre><%= JSON.stringify(data, null, 2) %></pre>
  <% } %>
</div>

<%- include('partials/footer') %>
